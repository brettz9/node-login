
#set-password.modal(role='main')
	.modal-dialog(role='dialog')
		.modal-content
			.modal-header
				h1.modal-title Reset Password
				button.close(type='button' data-dismiss='modal' aria-label='Close')
					span(aria-hidden='true') Ã—
			.modal-body
				form#set-password-form(method='post')
					.form-group
						label(for='pass-tf') Please enter your new password
						input.form-control.required(type='password' name='pass' id='pass-tf')
						.alert.alert-danger.hide
			.modal-footer
				button#set-password-submit.btn.btn-primary(
					type='submit'
					form='set-password-form'
				) Submit
